{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2019",
    "lib": ["es2019", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "inlineSources": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["src"]
}
